---
import type { HTMLAttributes } from 'astro/types'
import ColoredBars from '@/components/decorations/ColoredBars.vue'
import NavigationMenu from './NavigationMenu.vue'
import Logo from '@/assets/logo.svg'
import { t } from 'astro-i18n'

interface Props extends HTMLAttributes<'div'> {
  fallbackLabel?: string
}

const { fallbackLabel, ...props } = Astro.props
---

<div class:list={['nav-container', props.class]} {...props}>
  <div class="left">
    <di class="logo">
      <a href={Astro.locals.root}><Logo /></a>
    </di>
  </div>
  <div class="center disable-scrollbars">
    <NavigationMenu
      client:load
      locale={Astro.currentLocale}
      label={fallbackLabel ??
        t('component.navigation.navigation_menu.label', undefined, {
          locale: Astro.currentLocale
        })}
      slug={Astro.locals.slug}
    />
  </div>
  <div class="right">
    <div class="bars">
      <ColoredBars />
    </div>
  </div>
</div>

<style lang="scss">
  @use '@/styles/mixins' as *;

  .nav-container {
    display: grid;
    grid-template-areas:
      'left right'
      'left center';
    grid-template-columns: min-content auto;
    grid-template-rows: auto auto;
    align-items: center;
    font-size: 0.72rem;

    @include layout(desktop) {
      grid-template-areas: 'left center right';
      grid-template-columns: 5rem auto 5rem;
      grid-template-rows: auto;
    }

    a {
      text-decoration: none;
    }
  }

  .left,
  .right {
    white-space: nowrap;
  }

  .left {
    display: flex;
    flex-direction: row;
    grid-area: left;
  }

  .right {
    display: flex;
    flex-direction: row-reverse;
    grid-area: right;
  }

  .center {
    grid-area: center;
  }

  .logo {
    height: 1.45rem;
    aspect-ratio: 1/1;
  }

  .bars {
    display: flex;
    flex-direction: row;
    width: 5rem;
    height: 0.25rem;

    @include layout(desktop) {
      width: 100%;
    }
  }
</style>

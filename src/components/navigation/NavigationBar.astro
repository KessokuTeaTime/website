---
import ColoredBars from '@/components/decorations/ColoredBars.vue'
import NavigationMenu from './NavigationMenu.vue'
import Logo from '@/assets/logo.svg'
---

<div class="container">
  <div class="left">
    <div class="logo">
      <a href="/"><Logo /></a>
    </div>
  </div>
  <div class="center disable-scrollbars">
    <NavigationMenu class="menu" client:load />
  </div>
  <div class="right">
    <div class="bars">
      <ColoredBars />
    </div>
  </div>
</div>

<style lang="scss">
  @use '@/styles/mixins' as *;

  .container {
    display: grid;
    grid-template-areas:
      'left right'
      'left center';
    grid-template-columns: min-content auto;
    grid-template-rows: auto auto;
    align-items: center;
    font-size: 0.72rem;

    @include layout(desktop) {
      grid-template-areas: 'left center right';
      grid-template-columns: 1fr auto 1fr;
      grid-template-rows: auto;
    }

    a {
      text-decoration: none;
    }
  }

  .left,
  .right {
    white-space: nowrap;
  }

  .left {
    display: flex;
    flex-direction: row;
    grid-area: left;
  }

  .right {
    display: flex;
    flex-direction: row-reverse;
    grid-area: right;
  }

  .center {
    display: flex;
    flex-direction: row-reverse;
    justify-content: flex-start;
    grid-area: center;

    @include layout(desktop) {
      justify-content: center;
    }
  }

  .logo {
    height: 1.45rem;
    aspect-ratio: 1/1;
  }

  .bars {
    display: flex;
    flex-direction: row;
    width: 5rem;
    height: 0.25rem;
  }
</style>

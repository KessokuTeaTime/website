---
import IndexLayout from '@/layouts/IndexLayout.astro'
import { makeTitle } from '@/config'
import { t } from 'astro-i18n'
---

<IndexLayout title={makeTitle(t('page.people.title'))} , description={t('page.people.description')}>
  <Fragment>
    <div class="content-container prose">
      <slot>
        <h1>People</h1>
      </slot>
    </div>
  </Fragment>
</IndexLayout>

<style lang="scss">
  .content-container {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
</style>
